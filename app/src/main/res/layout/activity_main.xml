<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorGreyDark"
    android:orientation="horizontal"
    tools:context="com.example.raiman.calculatorscientific.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:background="@color/colorGreyDark"
            android:layout_weight="10"
            android:hint="0"

            android:textSize="50dp"
            android:layout_gravity="top" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:layout_weight="1.4"
            android:background="@color/colorGreyDark"
            android:layout_gravity="top|left|bottom|right"
            android:gravity="fill_horizontal|start|fill_vertical|end">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.125">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Cos"
                    android:id="@+id/cos"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/my_button_bg"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Sin"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/sin"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Tan"
                    android:id="@+id/tan"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    android:id="@+id/Ce"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:width="90dp"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorRed"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Ce"
                    android:textSize="25dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.125">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Sinh"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/sinh"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="cosh"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/cosh"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Tanh"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tanh"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="C"
                    android:id="@+id/C"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorRed"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.125">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Pow"
                    android:id="@+id/exp"
                    android:textSize="25dp"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Sqrt"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/sqrt"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Rad"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/rad"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Deg"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/deg"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Log"
                    android:background="@drawable/my_button_bg"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/log"
                    android:textSize="25dp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="0"
                android:layout_gravity="top|left|bottom|right"
                android:layout_weight="0.125">

                <Button
                    android:id="@+id/btn1"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top|left|bottom|right"
                    android:layout_weight="1"
                    android:background="@drawable/my_button_grey"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1"
                    android:textSize="30dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:background="@drawable/my_button_grey"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="top|left|bottom|right" />

                <Button
                    android:id="@+id/btn3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top|left|bottom|right"
                    android:layout_weight="1"
                    android:background="@drawable/my_button_grey"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="3"
                    android:textSize="30dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/add"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/my_button_blue"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.125">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/btn4"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:background="@drawable/my_button_grey"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="top|left|bottom|right" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/btn5"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:background="@drawable/my_button_grey"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/btn6"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:background="@drawable/my_button_grey"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/subt"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/my_button_blue"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.125">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/btn7"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:background="@drawable/my_button_grey"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/btn8"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:background="@drawable/my_button_grey"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/btn9"
                    android:textSize="30dp"
                    android:background="@drawable/my_button_grey"
                    android:width="90dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="*"
                    android:id="@+id/mult"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/my_button_blue"
                    android:textSize="30dp"
                    android:width="90dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.125">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/btn0"
                    android:textSize="30dp"
                    android:background="@drawable/my_button_grey"
                    android:width="190dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:id="@+id/dot"
                    android:textSize="30dp"
                    android:background="@drawable/my_button_grey"
                    android:width="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/div"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/my_button_blue"
                    android:width="30dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|left|bottom|center|right"
                android:weightSum="0"
                android:layout_weight="0.125">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:id="@+id/equals"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@drawable/my_button_orange"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="%"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/my_button_blue"
                    android:id="@+id/perc"
                    android:textSize="30dp"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="3" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>